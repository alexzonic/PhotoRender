<Window x:Class="PhotoRender.AstridSlider"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PhotoRender"
        mc:Ignorable="d"
        Title="Яркость/Контрастность" Height="180" Width="350">
        <Grid>
            <Slider Name="brightSlider" Margin="10, 5, 10, 42" Value="0" Minimum="-10" Maximum="10" TickFrequency="1" 
                    IsSnapToTickEnabled="True" SelectionStart="0" Height="30" 
                    IsSelectionRangeEnabled="True" ValueChanged="Bright_ValueChanger"
                    />
            <Slider Name="contrastSlider" Margin="10, 90, 10, 5" Value="0" Minimum="-10" Maximum="10" TickFrequency="1"
                    IsSnapToTickEnabled="True" SelectionStart="0" Height="40" ValueChanged="Contrast_ValueChanger"
                    />
       </Grid>
</Window>
