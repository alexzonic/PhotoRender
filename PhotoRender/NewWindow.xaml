<Window x:Class="PhotoRender.NewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PhotoRender"
        mc:Ignorable="d"
        Title="NewWindow" Height="500" Width="800">
    <Grid ShowGridLines="True">
        <Grid Margin="0,0,233.6,0.4">
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="470*"/>
            </Grid.RowDefinitions>
            <Menu Grid.Row="0" Background="#282728">
                <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                        Content="Открыть" MinWidth="60" MinHeight="30" 
                        Margin="-7, 0, -6,0" Cursor="Hand" Click="LoadImage_Click" 
                        />
                <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                        Content="Сохранить как..." MinWidth="60" MinHeight="30" 
                        Margin="-7, 0, -6,0" Cursor="Hand" Click="SaveImage_Click" 
                        />
            </Menu>
            <Grid Grid.Row="1" Background="#2d292d">
                <Image x:Name="image" />
            </Grid>
        </Grid>
        
        <Grid Margin="560,0,-0.4,0.4">
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="450*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>
        </Grid>
        
    </Grid>
</Window>
