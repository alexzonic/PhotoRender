<Window x:Class="PhotoRender.BalanceSlider"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PhotoRender"
        mc:Ignorable="d"
        Title="BalanceSlider" Height="450" Width="800">
    <Grid>
        <Slider Name="RedColorSlider" Margin="10,32,10,111.6" Value="0" Minimum="-10" Maximum="10" TickFrequency="1" 
                IsSnapToTickEnabled="True" SelectionStart="0" Height="30" 
                IsSelectionRangeEnabled="True" ValueChanged="RedColorSlider_OnValueChanged"
        />
        <Slider Name="GreenColorSlider" Margin="10,32,10,111.6" Value="0" Minimum="-10" Maximum="10" TickFrequency="1" 
                IsSnapToTickEnabled="True" SelectionStart="0" Height="30" 
                IsSelectionRangeEnabled="True" ValueChanged="GreenColorSlider_OnValueChanged"
        />
        <Slider Name="BlueColorSlider" Margin="10,32,10,111.6" Value="0" Minimum="-10" Maximum="10" TickFrequency="1" 
                IsSnapToTickEnabled="True" SelectionStart="0" Height="30" 
                IsSelectionRangeEnabled="True" ValueChanged="BlueColorSlider_OnValueChanged"
        />
        
    </Grid>
</Window>