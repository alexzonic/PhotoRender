<Window x:Class="PhotoRender.BrightSlider"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:PhotoRender"
        mc:Ignorable="d"
        Title="slide" Height="100" Width="250">
        <Grid>
            <Slider Name="myslider" Margin="10" Value="0" Minimum="-10" Maximum="10" TickFrequency="1" 
                    IsSnapToTickEnabled="True" SelectionStart="0" Height="30" 
                    IsSelectionRangeEnabled="True" ValueChanged="Slider_ValueChanger"/>
       </Grid>
</Window>
